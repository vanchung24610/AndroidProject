<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testwifiswitchh.MainActivity$PlaceholderFragment" >
	
    <Switch 
        android:id="@+id/switch_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="switchWifi"
    	android:text="@string/switch_wifi"
        />
    <Switch 
        android:id="@+id/switch_bluetooth"
        android:layout_below="@+id/switch_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="switchBluetooth"
        android:text="@string/switch_bluetooth"
        />
    
    <Button 
        android:id="@+id/change_brightness"
        android:layout_below="@+id/switch_bluetooth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="setBrightness"
        android:text="@string/change_brightness"
        
        />
    <Switch 
        android:id="@+id/switch_mobile_data"
        android:layout_below="@+id/change_brightness"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="switchMobileData"
        android:text="@string/switch_mobile_data"
        />
                
</RelativeLayout>
